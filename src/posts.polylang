collection Posts {
	id: string;
	creator: string;
	content: string;
	attachments: string[];

	function constructor(session: Sessions, content: string, attachments: string[]) {
		this.id = "generate ksuid";
		this.creator = session.auth();
		this.content = content;
		this.attachments = attachments;
	}

	function delete(session: Sessions) {
		if (session.auth() != this.creator) {
			throw error('invalid post creator');
		}

		selfdestruct();
	}
}
